<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shap_corner_up"

    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/nav_dialog_edit"
        android:maxLines="2"
        android:hint="准备做什么？"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:id="@+id/nav_dialog_remind"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/rili"
            android:layout_marginTop="8dp"
            />
        <ImageView
            android:id="@+id/nav_dialog_pri"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/paixu"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            />
        <Button
            android:id="@+id/nav_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="确定"
            android:layout_marginLeft="200dp"
            android:paddingRight="10dp"
            android:gravity="top"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="onClickSure"
            android:textColor="@color/gray"
            />
    </LinearLayout>
</LinearLayout>