<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/todoCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/colorTheme"
        />

    <LinearLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/time_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/time"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置时间"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/remind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/remind_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/naozhong"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/remind_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置提醒"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/repeat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/repeat_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/loop"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/repeat_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置重复"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_calendar"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="取消"
            style="?android:attr/borderlessButtonStyle"
            android:layout_toLeftOf="@+id/sure_calendar"
            android:background="@drawable/button_noaction"
            android:textColor="@color/colorTheme"/>
        <Button
            android:id="@+id/sure_calendar"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="确定"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_noaction"
            android:textColor="@color/colorTheme"/>
    </RelativeLayout>
</LinearLayout>